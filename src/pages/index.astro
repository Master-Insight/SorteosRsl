---
import Layout from "../layouts/Layout.astro";

const PrimerPremio = "Auto 0km";
const SegundoPremio = "otra cosa";

const logos = [
  { src: "/images/rsl.png", title: "Rally Sprint Latan" },
  { src: "/images/actc.png", title: "Asociación Corredores Turismo Carretera" },
  { src: "/images/planx5.png", title: "Plan X5 Argentina" },
];

// https://docs.google.com/spreadsheets/d/1IEfeoluULV9IPsQpBZniKIw_z9YAsMSV7NsS9iVzBWQ
---

<Layout>
  <main
    class="min-h-screen bg-black text-white flex items-center justify-center p-4 print:bg-transparent print:text-black"
  >
    <div class="max-w-4xl w-full bg-white rounded-lg shadow-lg p-8">
      <h1 class="text-3xl font-bold text-center text-black mb-8">
        Bono Contribución
      </h1>
      <div class="flex flex-col md:flex-row gap-8">
        <!-- Formulario -->
        <div class="w-full md:w-1/2">
          <form
            id="sorteoForm"
            action="#"
            method="POST"
            class="space-y-6"
            onsubmit="handleSubmit(event)"
          >
            <div>
              <label
                for="Nombre"
                class="block text-sm font-medium text-gray-700">Nombre:</label
              >
              <input
                type="text"
                id="Nombre"
                name="Nombre"
                required
                autocomplete="given-name"
                class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
              />
            </div>
            <div>
              <label
                for="Apellido"
                class="block text-sm font-medium text-gray-700">Apellido:</label
              >
              <input
                type="text"
                id="Apellido"
                name="Apellido"
                required
                autocomplete="family-name"
                class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
              />
            </div>
            <div>
              <label
                for="Telefono"
                class="block text-sm font-medium text-gray-700">Teléfono:</label
              >
              <input
                type="tel"
                id="Telefono"
                name="Telefono"
                required
                autocomplete="tel"
                class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
              />
            </div>
            <button
              type="submit"
              class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
            >
              Participar
            </button>
          </form>
        </div>

        <!-- Información de Premios y Logos -->
        <div class="w-full md:w-1/2 text-black">
          <h2 class="text-2xl font-bold mb-4">Premios</h2>
          <ul class="space-y-2 mb-6">
            <li>
              1º Premio: <span class="font-extrabold">{PrimerPremio}</span>
            </li>
            <li>
              2º Premio: <span class="font-extrabold">{SegundoPremio}</span>
            </li>
          </ul>
          <p class="text-sm mb-6">
            Sorteo el <strong class="font-semibold"
              >fecha en formato largo</strong
            > en la premiación de la carrera.
          </p>
          <div class="flex space-x-4">
            {
              logos.map((logo) => (
                <img
                  src={logo.src}
                  alt={logo.title}
                  class="w-24 h-auto"
                  title={logo.title}
                />
              ))
            }
          </div>
        </div>
      </div>
    </div>

    <!-- Modal "Enviando" -->
    <div
      id="modal"
      class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 hidden"
      style="z-index: 1000;"
    >
      <div class="bg-white p-6 rounded-lg shadow-lg text-center">
        <p class="text-md font-medium text-black">Enviando...</p>
      </div>
    </div>
  </main>
</Layout>

<!-- Script Enviar Formulario -->
<script is:inline>
  async function handleSubmit(event) {
    event.preventDefault(); // Evita el comportamiento por defecto del formulario

    const form = document.getElementById("sorteoForm");
    const modal = document.getElementById("modal");

    // Mostrar el modal de "Enviando..."
    modal.classList.remove("hidden");

    const formData = new FormData(form);
    const data = Object.fromEntries(formData.entries());

    // Validar campos vacíos
    if (!data.Nombre || !data.Apellido || !data.Telefono) {
      alert("Por favor, complete todos los campos.");
      modal.classList.add("hidden"); // Ocultar el modal si hay campos vacíos
      return;
    }

    try {
      const response = await fetch("/api/save.json", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(data),
      });

      if (response.ok) {
        // Redirigir a /enviado con los datos como parámetros en la URL
        const params = new URLSearchParams(data).toString();
        window.location.href = `/enviado?${params}`;
      } else {
        alert("Error al guardar los datos");
      }
    } catch (error) {
      console.error(error);
      alert("Error al enviar el formulario");
    } finally {
      // Ocultar el modal de "Enviando..."
      modal.classList.add("hidden");
    }
  }
  // if (nombre && apellido && telefono) {
  //   window.location.href =
  //     "https://www.mercadopago.com.ar/checkout/v1/redirect?pref_id=TU_PREFERENCE_ID";
  // } else {
  //   alert("Por favor, complete todos los campos.");
  // }
</script>
