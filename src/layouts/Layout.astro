---
import "../styles/global.css";
import company from "@config/company.mjs";
import LHeader from "@/layouts/components/Header.astro";
import LFooter from "@/layouts/components/Footer.astro";

const {
  title = "SorteosRsl | RSL Rally Sprint Latam",
  description = "Participa en nuestros sorteos y gana premios exclusivos de RS Rally Sprint.",
  keywords = "",
  image = "", // TODO Completar
  url = "", // TODO Completar
} = Astro.props;
const logoUrl = company.images.logo;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <!-- Info -->
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Favicon -->
    <link
      rel="icon"
      href="/favicon/cropped-RSL-FAVICON-32x32.webp"
      sizes="32x32"
    />
    <link
      rel="icon"
      href="/favicon/cropped-RSL-FAVICON-192x192.webp"
      sizes="192x192"
    />
    <link
      rel="apple-touch-icon"
      href="/favicon/cropped-RSL-FAVICON-180x180.webp"
    />
    <meta
      name="msapplication-TileImage"
      content="/favicon/cropped-RSL-FAVICON-270x270.webp"
    />

    <!-- Importar Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100..900;1,100..900&family=Saira:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <LHeader logoUrl={logoUrl} />
    <slot />
    <LFooter />
  </body>
</html>

<style is:global>
  html,
  body {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    font-family: "Roboto", system-ui, sans-serif;
    background-color: black;
    color: white;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: "Saira", sans-serif;
  }

  @media print {
    html,
    body {
      background-color: white;
      color: black;
    }
  }
</style>
